    }
    .btn:active{
        transform: translateX(0);
        box-shadow: 0 4px 8px rgba(0,0,0,0.18) inset;
    }
    .btn:focus-visible{
        outline: 2px solid #6c63ff;
        outline-offset: 2px;
    }
