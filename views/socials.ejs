        .hamburger {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(20, 33, 61, 0.9);
            border: none;
            color: white;
            font-size: 24px;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            z-index: 1001;
